<CustLabel@Label>:
    color: .761, .190, .810, 1
<LogIn>:
    name: "login"
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            cols: 2
            Label:
                size_hint_x: 1
                text: "Name"

            TextInput:
                size_hint_x: 0.2
                size_hint_y: 1
                id: login
                multiline: False

            Label:
                size_hint_x: 1
                text: "password"

            TextInput:
                size_hint_x: 1
                id: login
                multiline: False

        Button:
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            size_hint_x: .5
            size_hint_y: .2
            text: "Submit"
            on_release:
                app.root.current = "main_menu"
                root.manager.transition.direction = "left"

        Button:
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            size_hint_x: .5
            size_hint_y: .2
            text: "Create new profile"
            on_release:
                app.root.current = "NewProfile"

<NewProfile>:
    name: "NewProfile"
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            cols: 2
            Label:
                size_hint_x: 1
                text: "Name"

            TextInput:
                size_hint_x: 0.2
                size_hint_y: 1
                id: login
                multiline: False

            Label:
                size_hint_x: 1
                text: "password"

            TextInput:
                size_hint_x: 1
                id: login
                multiline: False

        Button:
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            size_hint_x: .5
            size_hint_y: .2
            text: "Create new profile"
            on_release:
                app.root.current = "main_menu"
                root.manager.transition.direction = "left"

        Button:
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            size_hint_x: .5
            size_hint_y: .2
            text: "Back"
            on_release:
                app.root.current = "LogIn"

<Main_Menu>:
    name: "main_menu"
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            cols: 3
            Button:
                text: "Меню"
                size_hint: 1, .1
                font_size:15
                on_release: app.root.current = "dop_menu"

            Label:
                size_hint: 1, .1
                text: "Баланс ____$"
                font_size:15

            Button:
                text: "Профиль"
                size_hint: 1, .1
                font_size:15
                on_release:
                    app.root.current = "profile"
        Label
            size_hint: 1, 5
    Button:
        text: "Доходы"
        pos_hint: {'center_x':0.2, 'center_y':0.1}
        size_hint_x: .4
        size_hint_y: .1
        font_size:20
        on_release:
            app.root.current = "dohod"

    Button:
        size_hint_x: .3
        size_hint_y: .1
        pos_hint: {'center_x':0.55, 'center_y':0.1}
        text: "Расходы"
        font_size:20
        on_release:
            app.root.current = "rashod"

    Button:
